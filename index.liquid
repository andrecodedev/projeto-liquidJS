<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Loja de Teste com Liquid</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <header>
    <h1>Loja de Teste com Liquid</h1>
    <p>Feito por André Vitor usando LiquidJS</p>
  </header>

  <main>
    <div class="cardContent">
      <div class="card" id="produtoCard">
        <img src="img/produto1.webp" alt="Imagem do produto" id="produtoImg">
        <h2 id="produtoTitulo">Mouse Gamer</h2>
        <p id="produtoDescricao">Mouse com alta precisão e iluminação RGB.</p>
        <span class="preco" id="produtoPreco">R$ 150,00</span>
        <button id="trocarBtn">Trocar Produto</button>
      </div>
    </div>
    <div class="textContent">
      <small>Gerado com LiquidJS</small>
    </div>
  </main>

  <script>
    const produtos = [{"img":"img/produto1.webp","titulo":"Mouse Gamer","descricao":"Mouse com alta precisão e iluminação RGB.","preco":"R$ 150,00"},{"img":"img/produto2.webp","titulo":"Teclado Mecânico","descricao":"Teclado com switches mecânicos e design ergonômico.","preco":"R$ 350,00"},{"img":"img/produto3.webp","titulo":"Headset","descricao":"Headset com som surround e microfone ajustável.","preco":"R$ 250,00"}];
    let indice = 0;

    document.getElementById('trocarBtn').addEventListener('click', () => {
      indice = (indice + 1) % produtos.length;
      document.getElementById('produtoImg').src = produtos[indice].img;
      document.getElementById('produtoTitulo').textContent = produtos[indice].titulo;
      document.getElementById('produtoDescricao').textContent = produtos[indice].descricao;
      document.getElementById('produtoPreco').textContent = produtos[indice].preco;
    });
  </script>
</body>
</html>
